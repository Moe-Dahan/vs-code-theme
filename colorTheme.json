{
    "workbench.startupEditor": "none",
    "files.autoSave": "afterDelay",
    "workbench.colorTheme": "Default Dark+",
    "workbench.colorCustomizations": {
        "[Default Dark+]": {
            "activityBar.border": "#00fff2",
            "activityBar.background": "#1d1d1d",
            "sideBar.background": "#1d1d1d",
            "sideBar.border": "#00fff2",
            "editor.background": "#1d1d1d",
            "editor.selectionBackground" : "#000f50",
            "editor.hoverHighlightBackground": "#d400ff",
            "terminal.border" : "#00f7ff",
            "terminal.foreground": "#00f7ff",

            "activityBar.foreground": "#1efd00",
            "activityBar.activeBorder": "#2afd00",
            "activityBar.inactiveForeground" : "#01e1ff",
            "toolbar.hoverOutline": "#00ff15",
            "tab.activeBorder": "#00ff2a",
            "tab.inactiveBackground": "#111111",
            "tab.inactiveForeground": "#fdfdfd",
        }
    },
    "editor.tokenColorCustomizations": {
        "[Default Dark+]": {
            "comments": "#6C757D",
            "functions": "#007BFF",
            "keywords": "#FF073A",
            "numbers": "#00ff3c",
            "strings": "#FFC107",
            "types": "#00ddff",
            "variables": "#e100ff",
            "textMateRules": [
            {
                "scope": ["comment"],
                "settings": {
                    "foreground": "#6C757D",
                    "fontStyle": "italic bold underline"
                }
            },
            {
                "scope" : ["variable.other"],
                "settings": {
                    "foreground": "#00ddff",
                    "fontStyle": "italic bold"
                }
            },
            {
                "scope" : ["meta.function-call"],
                "settings": {
                    "foreground": "#FFC107",
                    "fontStyle": "bold"
                }
            },
            {
                "scope": ["meta.function"],
                "settings": {
                    "fontStyle": "italic bold"
                }
            },
            {
                "scope": ["entity.name.function"],
                "settings": {
                    "fontStyle": "italic bold"
                }
            },
            {
                "scope": ["variable"],
                "settings": {
                    "fontStyle": "italic bold"
                }
            },
            {
                "scope": ["entity.name.type"],
                "settings": {
                    "fontStyle": "italic bold"
                    }
                }
            ]
        }
    },
    "editor.multiCursorModifier": "ctrlCmd"
}
    
